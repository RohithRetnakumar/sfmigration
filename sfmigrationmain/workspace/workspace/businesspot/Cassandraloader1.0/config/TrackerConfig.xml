<cassandraloaderTrackerConfig>
   <id>TrackerConfig</id>
   <name>platform</name>
   <statusLevel>WARN</statusLevel>
   <level>DEBUG</level>
   <pattern>%d [%t] %-5level: %msg%n%throwable</pattern>
   <cronTriggeringSchedule>0 0 0 * * ?</cronTriggeringSchedule>
   <rollBackFileSize>100M</rollBackFileSize>
   <fileName>./logs/platform.log</fileName>
   <archiveFilePattern>logs/archive/reds-%d{MM-dd-yy}.log.gz</archiveFilePattern>
   <additivity>false</additivity>
   <consoleRequired>true</consoleRequired>
</cassandraloaderTrackerConfig>